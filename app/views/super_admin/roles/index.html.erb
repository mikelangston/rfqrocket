<div class="row py-2">
  <div class="col-md-12">
    <header>
      <h2>Roles</h2>
      <%= link_to "Add New Role", new_super_admin_role_path %>
    </header>
  </div>
</div>
<div class="row py-2">
  <div class="col-md-12 table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @roles.each_with_index do |role, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= role.name %></td>
            <td>
              <%= link_to "Edit", edit_super_admin_role_path(role) %> |
              <%= link_to "Delete", super_admin_role_path(role), method: :delete %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
