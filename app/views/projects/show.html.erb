<div class="row py-2 pt-5">
  <div class="col-md-12">
    <header>
      <h2><%= @project.name %></h2>
      <h5><%= @project.number %></h5>
      <p><strong>Jobsite:</strong> <%= @project.jobsite %></p>
      <%= link_to "Back", :back %> |
      <%= link_to "Create New RFQ", new_project_rfq_path(@project) %>
    </header>
  </div>
</div>
<div class="row py-2">
  <div class="col-md-12 table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th>#</th>
          <th>RFQ Name</th>
          <th>RFQ Number</th>
          <th>RFQ Initiator</th>
          <th>Status</th>
          <th>Issue Date</th>
          <th>Due Date</th>
          <th>Sealed?</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @project.rfqs.each_with_index do |rfq, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= rfq.name %></td>
            <td><%= rfq.number %></td>
            <td><%= rfq.initiator %></td>
            <td><%= rfq.status %></td>
            <td><%= rfq.issue_date %></td>
            <td><%= rfq.due_date %></td>
            <td><%= rfq.sealed %></td>
            <td>
              <%= link_to "View", project_rfq_path(@project, rfq) %> |
              <%= link_to "Edit", edit_project_rfq_path(@project, rfq) %> |
              <%= link_to "Delete", project_rfq_path(@project, rfq), method: :delete %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>