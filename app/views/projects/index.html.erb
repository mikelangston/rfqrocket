<div class="row py-2">
  <div class="col-md-12">
    <header>
      <h2>Projects</h2>
      <%= link_to "Add New Project", new_project_path %>
    </header>
  </div>
</div>
<div class="row py-2">
  <div class="col-md-12 table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Number</th>
          <th>Jobsite</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each_with_index do |project, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= project.name %></td>
            <td><%= project.number %></td>
            <td><%= project.jobsite %></td>
            <td>
              <%= link_to "View", project_path(project) %> |
              <%= link_to "Edit", edit_project_path(project) %> |
              <%= link_to "Delete", project_path(project), method: :delete %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>